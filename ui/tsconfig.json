{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "Node16",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
    },
    "include": [
        "src",
        "src/lib"
    ],
    "ts-node": {
        "compilerOptions": {
            "esModuleInterop": true,
            "module": "commonjs",
            "moduleResolution": "node",
            "noEmit": true,
            "allowSyntheticDefaultImports": true
        }
    }
}